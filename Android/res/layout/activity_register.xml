<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Register"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/username"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/user_name" >

        <requestFocus android:layout_height="match_parent" />
    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/dobText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/dobMonth"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Month"
            tools:ignore="TextFields,HardcodedText" />

        <EditText
            android:id="@+id/dobDay"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Day"
            tools:ignore="TextFields,HardcodedText" />

        <EditText
            android:id="@+id/dobYear"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Year"
            tools:ignore="TextFields,HardcodedText" />
    </LinearLayout>

    <EditText
        android:id="@+id/homeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home Address"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/homeCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home City"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/homeState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home State"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/homeZIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home ZIP"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/homePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Home Phone"
        android:inputType="phone"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edge"
        android:text="Register" />

</LinearLayout>